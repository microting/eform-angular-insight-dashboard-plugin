  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <OutputPath>../../../eFormAPI.Web/Plugins/InsightDashboard/</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <OutputPath>../../../eFormAPI.Web/Plugins/InsightDashboard/</OutputPath>
  </PropertyGroup>
  <PropertyGroup>
      <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HtmlToOpenXml.dll" Version="3.2.0" />
    <PackageReference Include="Microting.eForm" Version="8.0.64" />
    <PackageReference Include="Microting.eFormApi.BasePn" Version="8.0.64" />
    <PackageReference Include="Microting.InsightDashboardBase" Version="8.0.57" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\localization.json" />
    <EmbeddedResource Include="Resources\Templates\interviews-template.xlsx" />
    <EmbeddedResource Include="Resources\Templates\WordExport\file.docx" />
    <EmbeddedResource Include="Resources\Templates\WordExport\page.html" />
  </ItemGroup>

</Project>
